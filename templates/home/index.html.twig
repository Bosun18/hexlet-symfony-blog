{% extends 'layout.html.twig' %}

{% block body %}
  <div class="row mt-4">
    <div class="col">
      {% for post in posts %}
        <div class="card mb-3">
          <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="card-text">{{ post.content|striptags }}</p>
            <p class="card-text">
              <small class="text-muted">Created: {{ post.createdAt|date('F j, Y') }} | Updated: {{ post.updatedAt|date('F j, Y') }}</small>
            </p>

            <a href="{{ path('app_home_show', { id: post.id }) }}" class="stretched-link">Open</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
